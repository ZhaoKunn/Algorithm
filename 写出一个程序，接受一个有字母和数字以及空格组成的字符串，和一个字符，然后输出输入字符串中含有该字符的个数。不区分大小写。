#include <iostream>
#include <string>
using namespace std;
#define MAX 100;
int main()
{
    string s;
    cin>>s;
    char c;
    cin>>c;
    int n;
    int m=s.length();
    for(int i=0;i<m-1;i++)
    {
        int y=s[i]+32;
        int x=s[i]-32;
        if(c==s[i])
        {
            n=n+1;
        }
        else if(c==x)
        {
            n=n+1;
        }
        
        else if(c==y)
        {
            n=n+1;
        }
    }
    cout<<n<<endl;
    return 0;
    
}
